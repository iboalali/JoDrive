</head>
<body>
    <form method="post" action="">
        <fieldset style="background-color: white; width:312px">
            <!--<legend>Login</legend>-->
            <ol>
                <li>
                    <label for="uName">User:</label>
                    <input type="text" name="uName" @Validation.For( "uName" ) id="uName" value="" /> @Html.ValidationMessage( "uName" )
                </li>
                <li>
                    <label for="uPwd">Password:</label>
                    <input type="password" name="uPwd" @Validation.For( "uPwd" ) id="uPwd" value="" /> @Html.ValidationMessage( "uPwd" )
                </li>
                <li>
                    @* @Html.ValidationMessage( "LogInError" ); *@
                    <p style="color: #f00; font-size: medium"> @Html.Raw( message )</p>
                </li>
            </ol>

            <p class="form-actions">
                <input type="submit" name="btn" value="Login" title="Login" />
                <a href="~/signup" style="padding-left:1em">or SignUp</a>
            </p>

        </fieldset>
    </form>


</body>
</html>